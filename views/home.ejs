<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <title>Famous Quotes</title>
</head>

<body class="text-center">

    <%- include("partials/header.ejs") %>

        <div class="d-flex flex-wrap align-items-center justify-content-between p-2 shadow">
            <div class="card border-primary col flex-fill p-2 m-2 shadow">
                <form class="needs-validation" action="/searchByKeyword" method="GET" novalidate>
                    <label for="validationCustom01">Search By Keyword:
                        <input type="text" class="form-control" name="keyword" id="validationCustom01" required>
                    </label>
                    <div id="keyword-error" class="card shadow text-danger m-1 p-1">
                        Keyword must be 3 or more letters!
                    </div>
                    <button class="btn btn-outline-primary">Submit</button>
                </form>
            </div>
            <div class="card border-primary col flex-fill p-2 m-2 shadow">
                <form action="/searchByAuthor" method="GET">
                    <label for="">Search By Author:
                        <select name="authorId" id="">
                            <%for(let authorRow of authorRows) {%>
                                <option value="<%=authorRow.authorId%>" name="author">
                                    <%=authorRow.firstName%>
                                        <%=authorRow.lastName%>
                                </option>
                                <%}%>
                        </select>
                    </label>
                    <button class="btn btn-outline-primary">Submit</button>
                </form>
            </div>

            <div class="card border-primary col flex-fill p-2 m-2 shadow">
                <form action="/searchByCategory" method="GET">
                    <label for="">Search by Category:
                        <select name="categoryName" id="">
                            <%for(let catRow of categoryRows) {%>
                                <option value="<%=catRow.category%>" name="author">
                                    <%=catRow.category%>
                                </option>
                                <%}%>
                        </select>
                    </label>
                    <button class="btn btn-outline-primary">Submit</button>
                </form>
            </div>
            <div class="card border-primary col flex-fill p-2 m-2 shadow">
                <form action="/searchByLikes" method="GET">
                    <label for="">Search by Likes:
                        <label for="">From <input type="number" name="bottomLikes" min="0" max="1000"
                                placeholder="#"></label>
                        <label for="">To <input type="number" name="topLikes" min="0" max="1000"
                                placeholder="#"></label>
                    </label>
                    <button class="btn btn-outline-primary">Submit</button>
                </form>
            </div>
        </div>
        <%- include("partials/footer.ejs") %>
            <script>
                document.querySelector('#keyword-error').style.display = 'none'
                'use strict'

                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                const forms = document.querySelectorAll('.needs-validation')

                // Loop over them and prevent submission
                Array.from(forms).forEach(form => {
                    form.addEventListener('submit', event => {
                        console.log(document.querySelector('input[name="keyword"]').value.length)
                        if (!(document.querySelector('input[name="keyword"]').value.length > 2)) {
                            event.preventDefault()
                            event.stopPropagation()
                            document.querySelector('#keyword-error').style.display = 'block'
                            document.querySelector('#validationCustom01').classList.add('border-danger')
                        }

                    }, false)
                })

            </script>
</body>

</html>